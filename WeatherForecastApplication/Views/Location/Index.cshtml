@model IEnumerable<WeatherForecastApplication.Models.Location>

@{
    ViewData["Title"] = "Locations";
}

<h1>Locations</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table sortable">
    <thead>
        <tr>
            <th>
                <a href="#">@Html.DisplayNameFor(model => model.CityName)</a>
            </th>
            <th>
                <a href="#">@Html.DisplayNameFor(model => model.CountryName)</a>
            </th>
            <th>
                <a href="#">@Html.DisplayNameFor(model => model.Latitude)</a>
            </th>
            <th>
                <a href="#">@Html.DisplayNameFor(model => model.Longitude)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CityName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Latitude)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Longitude)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.LocationID">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.LocationID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.LocationID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

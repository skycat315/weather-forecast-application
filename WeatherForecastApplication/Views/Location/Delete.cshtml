@* This Razor view is used to confirm and perform deletion of a location record in the Weather Forecast Application *@

@model WeatherForecastApplication.Models.Location

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Location</h4>
    <hr />
    <dl class="row">
        <!-- Display name of the city-->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CityName)
        </dt>
        <!-- Display value of the city -->
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CityName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="LocationID" />
        <!-- Submit button -->
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-default">Cancel</a>
        </div>
    </form>
</div>

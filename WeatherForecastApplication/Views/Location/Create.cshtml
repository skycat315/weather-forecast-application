@* This Razor view is used to create a new location record in the Weather Forecast Application *@

@model WeatherForecastApplication.Models.Location

@{
    ViewData["Title"] = "Create Location";
}

<h1>Create Location</h1>

<form asp-action="Create">

    <!-- City Name -->
    <div class="form-group">
        <label asp-for="CityName" class="control-label"></label>
        <input asp-for="CityName" class="form-control" />
        <span asp-validation-for="CityName" class="text-danger"></span>
    </div>

    <!-- Province Name -->
    <div class="form-group">
        <label asp-for="ProvinceName" class="control-label"></label>
        <input asp-for="ProvinceName" class="form-control" />
        <span asp-validation-for="CityName" class="text-danger"></span>
    </div>

    <!-- Country Name -->
    <div class="form-group">
        <label asp-for="CountryName" class="control-label"></label>
        <input asp-for="CountryName" class="form-control" />
        <span asp-validation-for="CountryName" class="text-danger"></span>
    </div>

    <!-- Submit Button -->
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>

<!-- Navigation link -->
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<!-- Partial scripts for validation -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

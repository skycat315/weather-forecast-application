@model WeatherForecastApplication.Models.Location

@{
    ViewData["Title"] = "Edit Location";
}

<h1>Edit Location</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="LocationID" />

    <div class="form-group">
        <label asp-for="CityName" class="control-label"></label>
        <input asp-for="CityName" class="form-control" />
        <span asp-validation-for="CityName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

<div>
    <a asp-action="Details" asp-route-id="@Model.LocationID">Back to Details</a> |
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
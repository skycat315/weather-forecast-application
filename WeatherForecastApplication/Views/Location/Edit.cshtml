@* This Razor view allows editing of a location in the Weather Forecast Application *@

@model WeatherForecastApplication.Models.Location

@{
    ViewData["Title"] = "Edit Location";
}

<h1>Edit Location</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="LocationID" />

    <!-- City Name -->
    <div class="form-group">
        <label asp-for="CityName" class="control-label"></label>
        <input asp-for="CityName" class="form-control" />
        <span asp-validation-for="CityName" class="text-danger"></span>
    </div>

    <!-- ProvinceName -->
    <div class="form-group">
        <label asp-for="ProvinceName" class="control-label"></label>
        <input asp-for="ProvinceName" class="form-control" />
        <span asp-validation-for="ProvinceName" class="text-danger"></span>
    </div>

    <!-- Country Name -->
    <div class="form-group">
        <label asp-for="CountryName" class="control-label"></label>
        <input asp-for="CountryName" class="form-control" />
        <span asp-validation-for="CountryName" class="text-danger"></span>
    </div>

    <!-- Submit button -->
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

<!-- Navigation links -->
<div>
    <a asp-action="Details" class="btn btn-secondary" asp-route-id="@Model.LocationID">Back to Details</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<!-- Partial scripts for validation -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
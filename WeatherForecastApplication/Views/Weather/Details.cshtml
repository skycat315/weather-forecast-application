@* This Razor view displays the details of a weather condition *@

@model WeatherForecastApplication.Models.WeatherCondition

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Weather Condition</h4>
    <hr />
    <dl class="row">

        <!-- CityName -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location.CityName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location.CityName)
        </dd>

        <!-- Date -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToString("yyyy-MM-dd") <!-- Display only the date part -->
        </dd>

        <!-- Condition -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Condition)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Condition)
        </dd>

        <!-- Temperature-->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Temperature)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Temperature)
        </dd>

        <!-- Humidity -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Humidity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Humidity)
        </dd>

        <!-- WindSpeed-->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WindSpeed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WindSpeed)
        </dd>
    </dl>
</div>

<!-- Navigation link-->
<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

<!-- Partial scripts for validation -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}